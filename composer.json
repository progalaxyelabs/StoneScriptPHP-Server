{
    "name": "progalaxyelabs/stonescriptphp-server",
    "description": "Application skeleton for StoneScriptPHP. Ready-to-use project template with CLI tools, folder structure, and examples. Includes the stonescriptphp framework as a dependency.",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "stonescriptphp",
        "php",
        "api",
        "rest",
        "postgresql",
        "skeleton",
        "boilerplate"
    ],
    "homepage": "https://stonescriptphp.org",
    "support": {
        "issues": "https://github.com/progalaxyelabs/StoneScriptPHP-Server/issues",
        "source": "https://github.com/progalaxyelabs/StoneScriptPHP-Server",
        "docs": "https://stonescriptphp.org/docs"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.3.x-dev"
        }
    },
    "authors": [
        {
            "name": "StoneScriptPHP Team",
            "email": "team@progalaxyelabs.com",
            "homepage": "https://stonescriptphp.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "progalaxyelabs/stonescriptphp": "^2.3.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": ["stone"],
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (file_exists('vendor/progalaxyelabs/stonescriptphp/stone')) { copy('vendor/progalaxyelabs/stonescriptphp/stone', 'stone'); chmod('stone', 0755); echo '✅ Updated stone CLI from framework\\n'; }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists('vendor/progalaxyelabs/stonescriptphp/stone')) { copy('vendor/progalaxyelabs/stonescriptphp/stone', 'stone'); chmod('stone', 0755); echo '✅ Updated stone CLI from framework\\n'; }\""
        ],
        "post-create-project-cmd": [
            "@php stone setup"
        ],
        "dev": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"passthru('docker build -t stonescriptphp-dev -f Dockerfile.dev . 2>&1 | grep -q \\\"Successfully built\\\" || docker build -t stonescriptphp-dev -f Dockerfile.dev .');\"",
            "@php -r \"passthru('docker run -d --name stonescriptphp-dev -p 8000:8000 -v \\\"' . getcwd() . ':/var/www/html\\\" --env-file .env stonescriptphp-dev 2>&1');\"",
            "@php -r \"echo '\\n\\033[0;32m✓ Development server started!\\033[0m\\n';\"",
            "@php -r \"echo '  Access at: http://localhost:8000\\n';\"",
            "@php -r \"echo '  Stop: composer stop\\n';\"",
            "@php -r \"echo '  Logs: composer logs\\n\\n';\""
        ],
        "serve": [
            "@dev"
        ],
        "stop": [
            "@php -r \"passthru('docker stop stonescriptphp-dev 2>&1');\"",
            "@php -r \"passthru('docker rm stonescriptphp-dev 2>&1');\"",
            "@php -r \"echo '\\n\\033[0;32m✓ Development server stopped\\033[0m\\n\\n';\""
        ],
        "restart": [
            "@stop",
            "@dev"
        ],
        "logs": [
            "Composer\\Config::disableProcessTimeout",
            "docker logs -f stonescriptphp-dev"
        ],
        "shell": [
            "docker exec -it stonescriptphp-dev /bin/bash"
        ],
        "build": [
            "docker build -t stonescriptphp-dev -f Dockerfile.dev --no-cache ."
        ],
        "clean": [
            "@stop",
            "@php -r \"passthru('docker rmi stonescriptphp-dev 2>&1');\"",
            "@php -r \"echo '\\n\\033[0;33m⚠ Container and image removed\\033[0m\\n\\n';\""
        ],
        "test": "phpunit",
        "migrate": "php stone migrate"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "archive": {
        "exclude": [
            "/local-tests",
            "/.github",
            "/tests",
            "/docs",
            "/.git",
            "/.env",
            "/.env.*",
            "*.pem",
            "*.pub",
            "*.key",
            "*.log",
            "/logs",
            "/uploads",
            "/.idea",
            "/.vscode",
            "/.claude",
            "/.phpunit.cache",
            "/vendor",
            "/node_modules"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
