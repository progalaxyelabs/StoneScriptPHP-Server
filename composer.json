{
    "name": "progalaxyelabs/stonescriptphp-server",
    "description": "Application skeleton for StoneScriptPHP - Build production-ready APIs with PostgreSQL",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "stonescriptphp",
        "php",
        "api",
        "rest",
        "postgresql",
        "skeleton",
        "boilerplate"
    ],
    "homepage": "https://stonescriptphp.org",
    "support": {
        "issues": "https://github.com/progalaxyelabs/StoneScriptPHP-Server/issues",
        "source": "https://github.com/progalaxyelabs/StoneScriptPHP-Server",
        "docs": "https://stonescriptphp.org/docs"
    },
    "authors": [
        {
            "name": "StoneScriptPHP Team",
            "email": "team@progalaxyelabs.com",
            "homepage": "https://stonescriptphp.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "progalaxyelabs/stonescriptphp": "^2.0",
        "phpoffice/phpspreadsheet": "^5.0",
        "google/apiclient": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": ["stone"],
    "scripts": {
        "post-create-project-cmd": [
            "@php stone setup"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php stone serve"
        ],
        "test": "phpunit",
        "migrate": "php stone migrate"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "archive": {
        "exclude": [
            "/local-tests",
            "/.github",
            "/tests",
            "/docs",
            "/.git",
            "/.env",
            "/.env.*",
            "*.pem",
            "*.pub",
            "*.key",
            "*.log",
            "/logs",
            "/uploads",
            "/.idea",
            "/.vscode",
            "/.claude",
            "/.phpunit.cache",
            "/vendor",
            "/node_modules"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
