# Service Configuration
SERVICE_NAME=microservice
SERVICE_VERSION=1.0.0
API_PORT=9100

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=microservice_db
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRY=3600

# Service Registry (URLs of other microservices)
USER_SERVICE_URL=http://user-service:9100
PRODUCT_SERVICE_URL=http://product-service:9101
ORDER_SERVICE_URL=http://order-service:9102

# Message Queue (Optional)
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
REDIS_URL=redis://redis:6379

# Environment
APP_ENV=development
APP_DEBUG=true

# CORS
CORS_ALLOWED_ORIGINS=*
