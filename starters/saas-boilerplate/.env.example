# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=saas_db
DB_USER=postgres
DB_PASSWORD=postgres

# API Configuration
API_PORT=9100
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRY=3600

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_ENCRYPTION=tls
FROM_EMAIL=noreply@yoursaas.com
FROM_NAME=Your SaaS

# Application
APP_NAME=Your SaaS
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:9100
ADMIN_URL=http://localhost:4200

# Frontend
WWW_PORT=4200

# Redis (for queues and caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Multi-Tenancy
TENANT_ISOLATION_MODE=shared_db_separate_schema
# Options: shared_db_separate_schema, separate_db, row_level

# Features
ENABLE_TRIAL_PERIOD=true
TRIAL_DAYS=14
ENABLE_2FA=false

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:9100/auth/google/callback

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:4200

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
